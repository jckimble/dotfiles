let plugInstalled=0
let plug_readme=expand('~/.vim/bundle/vim-plug/README.md')
if !filereadable(plug_readme)
	silent !mkdir -p ~/.vim/bundle/ ~/.vim/autoload
	silent !git clone https://github.com/junegunn/vim-plug ~/.vim/bundle/vim-plug
	silent !ln -sf ~/.vim/bundle/vim-plug/plug.vim ~/.vim/autoload/plug.vim
	let plugInstalled=1
endif
set rtp+=~/.vim/bundle/vim-plug/
call plug#begin('~/.vim/bundle')

Plug 'junegunn/vim-plug'
Plug 'scrooloose/nerdtree'
Plug 'benmills/vimux'
Plug 'chriskempson/base16-vim'
Plug 'pangloss/vim-javascript'
Plug 'jelera/vim-javascript-syntax'
Plug 'spf13/vim-autoclose'
Plug 'myusuf3/numbers.vim'
Plug 'hail2u/vim-css3-syntax'

Plug 'christophermca/meta5'

Plug 'fatih/vim-go'
Plug 'airblade/vim-gitgutter'
Plug 'plasticboy/vim-markdown'

Plug 'tpope/vim-fugitive'
Plug 'vim-syntastic/syntastic'

"if plugInstalled == 1
"	:PlugInstall
"	:GoInstallBinaries
"endif

call plug#end()
